---
import { HEADER_NAV_ITEMS } from "@/lib/constants";
import ToogleDarkMode from "../ui/ToogleDarkMode.astro";
import BurgerMenu from "../ui/BurgerMenu.astro";
---

<header
  class="w-full border-b border-color h-16 fixed top-0 z-40 dark:bg-dark-bg-200 bg-light-bg-100"
>
  <nav
    class="mx-auto border-x border-color px-5 h-full max-w-[1024px] flex justify-between items-center"
  >
    <a
      href="/"
      class="text-color text-lg font-bold bg-light-primary-100 dark:bg-dark-primary-100 rounded-full
      w-10 h-10 flex items-center justify-center cursor-animated"
    >
      <span class="text-center text-white dark:text-black">CRV</span>
    </a>
    <ul class="hidden md:flex justify-center items-center h-full w-[30%]">
      {
        HEADER_NAV_ITEMS.map((item) => (
          <a
            href={item.href}
            class:list={[
              "dark:text-dark-text-100 text-light-text-100 w-1/3",
              "nav-item text-base font-semibold antialiased cursor-animated text-center",
              item.className,
            ]}
          >
            {item.name}
          </a>
        ))
      }
    </ul>
    <div class="flex justify-end items-center gap-x-5">
      <ToogleDarkMode />
      <BurgerMenu />
    </div>
  </nav>
</header>

<style>
  .nav-item::after {
    content: "";
    display: block;
    width: 0;
    height: 2px;
    background-color: currentColor;
    transition: width 0.3s;
  }

  .nav-item:hover::after {
    width: 100%;
  }
</style>
